<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <!-- set the shadow color here -->
            <stroke
                android:width="4dp"
                android:color="@color/gray_300" />

            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="-2dp"
                android:top="-2dp" />

            <corners android:radius="32dp" />
        </shape>
    </item>

    <item>
        <shape>
            <solid android:color="#fff" />
            <corners android:radius="32dp" />
        </shape>
    </item>
</layer-list>